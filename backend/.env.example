# Magnificent Recruitment App - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/magnificent-recruitment-app
MONGO_DB_NAME=magnificent-recruitment-app

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@magnificent-recruitment.com
FROM_NAME="Magnificent Recruitment App"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Talk Fusion Integration (if needed)
TALK_FUSION_API_URL=https://api.talkfusion.com
TALK_FUSION_API_KEY=your-talk-fusion-api-key

# Real-time Features
SOCKET_IO_CORS_ORIGIN=http://localhost:5173

# Analytics
GOOGLE_ANALYTICS_ID=GA-TRACKING-ID

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Production Settings (uncomment for production)
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/magnificent-recruitment-app
# CLIENT_URL=https://your-domain.com
# ALLOWED_ORIGINS=https://your-domain.com